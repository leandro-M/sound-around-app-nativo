<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_login"
    tools:context=".MusicDetail"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhiteTransparent"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/edtNomeMusica"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:hint="Nome da musica"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textColorHint="#50ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhiteTransparent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualizações: "
            android:textColor="@color/colorWhite"/>

        <EditText
            android:id="@+id/edtViewAlbums"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:gravity="start"
            android:enabled="false"
            android:textColorHint="#50ffffff" />

        <EditText
            android:id="@+id/edtMusicDetailId"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:hint="Descrição do album"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textColorHint="#50ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btnCancelNovaMusica"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:text="Cancelar"
            android:backgroundTint="@color/colorRed"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btnSaveNovaMusica"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="Salvar"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</LinearLayout>